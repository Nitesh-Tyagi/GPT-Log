{
    "manifest_version": 3,
    "name": "GPT Log",
    "version": "1.0",
    "description": "",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://chat.openai.com/*"],
            "js": ["scripts/content.js"]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    }, 
    "permissions": [
        "activeTab",
        "storage"
    ]  
}